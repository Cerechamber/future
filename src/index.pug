      section(class="yandex")
        iframe(src="https://yandex.ru/map-widget/v1/?um=constructor%3Ab3a6f5b5226454c103d7d53c29a029cc75409f20e25055be2930ae23e5fc1142&amp;source=constructor" frameborder="0" id="map")
        .container
          .meet(class=['d-flex', 'flex-column', 'justify-content-between', 'border', 'border-helgray'])
            +meet('Где встречаемся?', 'Москва')(class="meet-block1")
            +meet('Время съемки', '3часа')(class="meet-block2")
            +meet('Мест осталось:', '2 места')(class="meet-block3")
            +meet('Мария Иванова', 'Фотограф', 'Показать больше информации')(class="meet-block4")

      section
        .meet-hide(class=['border', 'border-helgray'])
          .container
            .row(class=['align-items-center', 'justify-content-around', 'meet-hide-up'])
              img(src="../images/arrow.svg" id="meet-hide-arr-1" alt="pic")
              img(src="../images/meet1.svg" id="meet-hide-1" alt="pic")
              img(src="../images/arrow.svg" id="meet-hide-arr-2" alt="pic")
            #meet-hide-m
              h2 Где встречаемся?
              p Москва
              .meet-hide-dotts
                img(src="../images/kr.svg" alt="pic")
                img(src="../images/kr2.svg" alt="pic")
                img(src="../images/kr2.svg" alt="pic")
            .meet-hide-down
              h2 Мария Иванова
              p Фотограф
              button(class=['btn', 'btn-link'] type="button") Показать больше информации о&nbsp;фотографе



