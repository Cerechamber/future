                  span(class="carousel-control-next-icon" aria-hidden="true")
                  span(class="sr-only") Next
          .container(id="photolg")
            .first-photo-block(class=['d-flex'])
              each val in ['girl', 'inside', 'kiss', 'first']
                img(src="../images/" + val + ".jpg" class="img-fluid" alt="pic")
            .second-photo-block(class=['d-flex'])
              each val in ['kiss', 'first', 'inside', 'kiss']
                img(src="../images/" + val + ".jpg" class="img-fluid" alt="pic")
